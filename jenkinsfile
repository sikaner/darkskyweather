pipeline {
    agent any

    environment {
        // Set up environment variables for Git repository and credentials
        GIT_REPO_URL = 'https://github.com/sikaner/darkskyweather.git'
        GIT_CREDENTIALS = 'Sky_weather' // This should be the ID of your Jenkins GitHub credentials
    }

    stages {
        stage('Checkout Code') {
            steps {
                // Checkout the code from the repository
                git credentialsId: "${GIT_CREDENTIALS}", url: "${GIT_REPO_URL}"
            }
        }
        
        stage('Make Changes') {
            steps {
                script {
                    // Example: create a new file or modify an existing one
                    sh 'echo "New changes to the code" >> newfile.txt'
                }
            }
        }

        stage('Commit Changes') {
            steps {
                script {
                    // Configure Git user (if not already set globally on the Jenkins machine)
                    sh 'git config user.name "Your Name"'
                    sh 'git config user.email "youremail@example.com"'

                    // Stage and commit changes
                    sh 'git add .'
                    sh 'git commit -m "Automated commit by Jenkins" || echo "No changes to commit"'
                }
            }
        }

        stage('Push Changes') {
            steps {
                script {
                    // Push the changes back to the repository
                    sh 'git push origin master'  // Or push to your target branch
                }
            }
        }
    }

    post {
        // Always clean up after pipeline run
        always {
            cleanWs()  // Clean workspace after pipeline completion
        }
    }
}
